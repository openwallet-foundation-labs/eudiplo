PUBLIC_URL=https://127.0.0.1:3000

# Authentication Configuration
# Set to true for multi-tenant Keycloak authentication, false for simple JWT client credentials
MULTI_TENANT=false

# Keycloak Configuration (required when MULTI_TENANT=true)
# KEYCLOAK_INTERNAL_ISSUER_URL=http://localhost:8080/realms/your-realm
# KEYCLOAK_CLIENT_ID=your-client-id

# Simple JWT Configuration (required when MULTI_TENANT=false)
JWT_SECRET=your-secret-key-here-minimum-32-characters
# JWT_ISSUER=eudiplo-service  # Optional: adds issuer validation for extra security
JWT_EXPIRES_IN=1h

AUTH_CLIENT_ID=root
AUTH_CLIENT_SECRET=root