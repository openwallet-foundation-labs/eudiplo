{
  "name": "@eudiplo/playground",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:client": "esbuild src/client/*/app.ts --bundle --outdir=public/js --watch --sourcemap",
    "build": "npm run build:server && npm run build:client",
    "build:server": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:express --packages=external",
    "build:client": "esbuild src/client/*/app.ts --bundle --outdir=public/js --minify",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@eudiplo/sdk-core": "^1.14.0",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0"
  }
}