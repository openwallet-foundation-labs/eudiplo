# =============================================================================
# EUDIPLO Kubernetes - Standard Configuration
# =============================================================================
# Overlay: standard
# Use case: Staging environments, small production deployments
# Components: EUDIPLO + PostgreSQL + MinIO
# =============================================================================

# Public URL
PUBLIC_URL=http://eudiplo.localtest.me

# =============================================================================
# Authentication
# ⚠️  REQUIRED - Set your own credentials!
# Generate secrets: openssl rand -base64 32
# =============================================================================
JWT_SECRET=your-secret-key-here-minimum-32-characters
AUTH_CLIENT_ID=your-client-id
AUTH_CLIENT_SECRET=your-secure-secret

# =============================================================================
# Database: PostgreSQL
# =============================================================================
DB_TYPE=postgres
DB_USERNAME=eudiplo
DB_PASSWORD=changeme-strong-password
DB_DATABASE=eudiplo
# DB_HOST and DB_PORT are set by the postgres component

# =============================================================================
# Key Management: Database-backed
# =============================================================================
KM_TYPE=file

# =============================================================================
# Encryption at Rest
# Default 'env' derives key from JWT_SECRET (not recommended for production)
# For production, use vault/aws/azure so key is only in RAM
# See docs: docs/architecture/database.md#encryption-key-sources
# =============================================================================
# ENCRYPTION_KEY_SOURCE=vault
# VAULT_ENCRYPTION_KEY_PATH=secret/data/eudiplo/encryption-key

# =============================================================================
# File Storage: S3 (MinIO)
# =============================================================================
STORAGE_DRIVER=s3
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=uploads
S3_FORCE_PATH_STYLE=true
# S3_ENDPOINT is set by the minio component

# =============================================================================
# MinIO Configuration
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=uploads
