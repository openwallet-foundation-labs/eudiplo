{
  "name": "eudiplo-workspace",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:apps": "pnpm --filter './apps/*' build",
    "dev:client": "pnpm --filter @eudiplo/client dev",
    "dev:verifier": "pnpm --filter verifier-app dev",
    "dev:backend": "pnpm --filter @eudiplo/backend dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "gen:api": "ts-node scripts/generate-from-openapi.ts --url http://localhost:3000/api-json --out schemas --no-type",
    "setup:python": "python3 -m venv venv && source venv/bin/activate && python3 -m pip install -r requirements.txt",
    "setup": "pnpm install && pnpm run setup:python",
    "docs:prebuild": "tsx --tsconfig tsconfig.scripts.json scripts/generate-config-docs.ts",
    "doc:generate": "pnpm run docs:prebuild && cd apps/backend && DOC_GENERATE=true PORT=3456 nest start && cd ../../ && pnpm run doc:format",
    "compodoc": "cd apps/backend && compodoc -p tsconfig.doc.json --theme material -d ../../docs/compodoc",
    "compodoc:serve": "cd apps/backend && compodoc -p tsconfig.doc.json --theme material -d ../../docs/compodoc -s -r 3001 -w",
    "doc:lint": "markdownlint \"docs/**/*.md\"",
    "doc:format": "markdownlint --fix \"docs/**/*.md\"",
    "doc:watch": "source venv/bin/activate && pnpm run doc:generate && mkdocs serve",
    "doc:build": "source venv/bin/activate && pnpm run doc:generate && pnpm run compodoc && mkdocs build --strict",
    "doc:init": "source venv/bin/activate && pnpm run doc:generate && pnpm run compodoc && mike deploy --update-aliases main latest-dev && mike set-default main",
    "doc:serve-versions": "source venv/bin/activate && mike serve",
    "doc:deploy-dev": "source venv/bin/activate && pnpm run doc:generate && pnpm run compodoc && mike deploy dev",
    "doc:deploy-major": "source venv/bin/activate && pnpm run doc:generate && pnpm run compodoc && mike deploy --update-aliases",
    "doc:list-versions": "source venv/bin/activate && mike list",
    "doc:delete-version": "source venv/bin/activate && mike delete",
    "prepare": "husky"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^8.0.8",
    "@apidevtools/json-schema-ref-parser": "^15.1.3",
    "@codedependant/semantic-release-docker": "^5.1.1",
    "@openapi-contrib/openapi-schema-to-json-schema": "^5.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@types/node": "^25.0.2",
    "@types/unzipper": "^0.10.11",
    "cross-fetch": "^4.1.0",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.47.0",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "unzipper": "^0.12.3"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}