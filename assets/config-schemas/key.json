{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://eudiplo.example.com/schemas/key-import.schema.json",
  "title": "KeyImportDto",
  "description": "Schema for importing a private key in JWK format",
  "type": "object",
  "properties": {
    "privateKey": {
      "description": "The private key in JWK format.",
      "type": "object",
      "properties": {
        "kid": {
          "type": "string"
        },
        "kty": {
          "type": "string"
        },
        "x": {
          "type": "string"
        },
        "y": {
          "type": "string"
        },
        "crv": {
          "type": "string"
        },
        "d": {
          "type": "string"
        },
        "alg": {
          "type": "string"
        }
      },
      "required": [
        "kid",
        "kty",
        "x",
        "y",
        "crv",
        "d",
        "alg"
      ]
    },
    "crt": {
      "type": "string",
      "description": "Optional certificate in PEM format."
    }
  },
  "required": [
    "privateKey"
  ]
}