{
    "id": "resident-city",
    "description": "Resident City Verification - Only requests city/locality for residency discount eligibility",
    "dcql_query": {
        "credentials": [
            {
                "id": "pid-sd-jwt",
                "format": "dc+sd-jwt",
                "meta": {
                    "vct_values": [
                        "urn:eudi:pid:de:1"
                    ]
                },
                "claims": [
                    {
                        "path": [
                            "address",
                            "locality"
                        ]
                    }
                ],
                "trusted_authorities": [
                    {
                        "type": "etsi_tl",
                        "values": [
                            "https://bmi.usercontent.opencode.de/eudi-wallet/test-trust-lists/pid-provider.jwt"
                        ]
                    }
                ]
            },
            {
                "id": "pid-mso-mdoc",
                "format": "mso_mdoc",
                "meta": {
                    "doctype_value": "eu.europa.ec.eudi.pid.1"
                },
                "claims": [
                    {
                        "path": [
                            "eu.europa.ec.eudi.pid.1",
                            "resident_city"
                        ],
                        "intent_to_retain": false
                    }
                ],
                "trusted_authorities": [
                    {
                        "type": "etsi_tl",
                        "values": [
                            "https://bmi.usercontent.opencode.de/eudi-wallet/test-trust-lists/pid-provider.jwt"
                        ]
                    }
                ]
            }
        ],
        "credential_sets": [
            {
                "options": [
                    [
                        "pid-sd-jwt"
                    ],
                    [
                        "pid-mso-mdoc"
                    ]
                ]
            }
        ]
    },
    "lifeTime": 300
}