{
    "id": "citizen",
    "description": "Citizen issuance with presentation during issuance flow",
    "config": {
        "format": "dc+sd-jwt",
        "display": [
            {
                "name": "Citizen Pass",
                "background_color": "#FFFFFF",
                "background_image": {
                    "uri": "<PUBLIC_URL>/mainhall/credential.png"
                },
                "description": "A pass for this citizen",
                "locale": "en-US",
                "logo": {
                    "uri": "<PUBLIC_URL>/issuer.png"
                },
                "text_color": "#000000"
            }
        ]
    },
    "claims": {
        "town": "Berlin"
    },
    "disclosureFrame": {},
    "vct": {
        "description": "This is our development version of the education credential. Don't panic."
    },
    "schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
            "vct": {
                "type": "string"
            },
            "iss": {
                "type": "string"
            },
            "nbf": {
                "type": "number"
            },
            "exp": {
                "type": "number"
            },
            "cnf": {
                "type": "object"
            },
            "status": {
                "type": "object"
            },
            "town": {
                "type": "string"
            }
        },
        "required": [
            "iss",
            "vct",
            "cnf",
            "town"
        ]
    }
}