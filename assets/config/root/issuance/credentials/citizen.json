{
    "id": "citizen",
    "description": "Citizen issuance with presentation during issuance flow",
    "config": {
        "format": "dc+sd-jwt",
        "display": [
            {
                "name": "Citizen Pass",
                "background_color": "#FFFFFF",
                "background_image": {
                    "uri": "credential.png"
                },
                "description": "A pass for this citizen",
                "locale": "en-US",
                "text_color": "#000000"
            }
        ]
    },
    "claimsWebhook": {
        "url": "http://localhost:8787/request",
